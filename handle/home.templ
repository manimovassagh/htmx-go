package handle

import "github.com/manimovassagh/htmx-app/layout"

templ Home() {
	@layout.Base() {
		<div>Hello World</div>
		<button hx-get="/" hx-target="#toggleDiv" hx-swap="outerHTML" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
			Click me 
		</button>
		 <div id="toggleDiv" class="hidden">
        This is a toggleable div!
    </div>
	}
}
